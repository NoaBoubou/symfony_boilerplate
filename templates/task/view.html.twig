{% extends 'base.html.twig' %}

{% block title %}Task Details{% endblock %}

{% block body %}
<div class="container mx-auto mt-10">
    <h1 class="text-2xl font-bold mb-5">Details</h1>

    <div class="bg-white border border-gray-200 rounded shadow p-4">
        <h2 class="text-xl font-semibold">{{ task.name }}</h2>
        <p class="mt-2 text-gray-700">{{ task.description }}</p>
        <p class="mt-2 text-sm text-gray-500">Date de création: {{ task.createdAt|date('Y-m-d H:i') }}</p>
        <p class="mt-2 text-sm text-gray-500">Dernière mise à jour: {{ task.updatedAt|date('Y-m-d H:i') }}</p>
    </div>

    <div class="flex justify-end mt-5">
        <a href="{{ path('task_index') }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">
            Retourner à la liste
        </a>
    </div>

</div>
{% endblock %}
