{% extends 'base.html.twig' %}

{% block title %}Edit Task{% endblock %}

{% block body %}
<div class="container mx-auto mt-10">
    <h1 class="text-2xl font-bold mb-5">Edit Task</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        <div>
            {{ form_label(form.name, 'Task Name', {'label_attr': {'class': 'block text-gray-700 font-bold'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2 border rounded'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div>
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-gray-700 font-bold'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-2 border rounded'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <button type="submit" class="bg-yellow-500 text-white px-4 py-2 rounded hover:bg-yellow-700">Save Changes</button>
    {{ form_end(form) }}
</div>
{% endblock %}
