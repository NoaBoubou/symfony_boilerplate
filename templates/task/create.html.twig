{% extends 'base.html.twig' %}

{% block title %}Create Task{% endblock %}

{% block body %}
<div class="container mx-auto mt-10">
    <h1 class="text-2xl font-bold mb-5">Créer une nouvelle tâche</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        <div>
            {{ form_label(form.name, 'Nom de la tâche', {'label_attr': {'class': 'block text-gray-700 font-bold'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2 border rounded'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div>
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-gray-700 font-bold'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'w-full px-4 py-2 border rounded'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div>
             <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">Create Task</button>
        </div>

    {{ form_end(form) }}

</div>
{% endblock %}
