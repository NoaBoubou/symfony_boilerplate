{% extends 'base.html.twig' %}

{% block title %}Liste des tâches{% endblock %}

{% block body %}
<div class="container mx-auto mt-10">
    <h1 class="text-2xl font-bold mb-5">Liste des tâches</h1>

        <div class="mb-3">
            {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">Se déconnecter</a>
        </div>

    <div class="flex justify-end mb-4">
        <a href="{{ path('task_create') }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">
            Créer une nouvelle tâche
        </a>
    </div>

    <table class="min-w-full bg-white border border-gray-200">
        <thead>
            <tr>
                <th class="border px-4 py-2">Nom</th>
                <th class="border px-4 py-2">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for task in tasks %}
                <tr>
                    <td class="border px-4 py-2">{{ task.name }}</td>
                    <td class="border px-4 py-2">
                        <a href="{{ path('task_view', {id: task.id}) }}" class="text-blue-500 hover:underline">Info</a>
                        <a href="{{ path('task_edit', {id: task.id}) }}" class="text-yellow-500 hover:underline ml-2">Modifier</a>
                        <a href="{{ path('task_delete', {id: task.id}) }}" class="text-red-500 hover:underline ml-2"
                           onclick="return confirm('Are you sure you want to delete this task?');">
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="border px-4 py-2 text-center">Vous n'avez pas de tâches.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
